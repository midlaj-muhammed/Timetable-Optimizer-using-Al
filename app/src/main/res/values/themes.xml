<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Application Theme -->
    <style name="Theme.TimetableOptimizerAI" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window properties -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TimetableOptimizer.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TimetableOptimizer.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TimetableOptimizer.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TimetableOptimizer.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TimetableOptimizer.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TimetableOptimizer.Caption</item>
        
        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.TimetableOptimizer.CardView</item>
        <item name="materialButtonStyle">@style/Widget.TimetableOptimizer.Button</item>
        <item name="textInputStyle">@style/Widget.TimetableOptimizer.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.TimetableOptimizer.BottomNavigation</item>
        <item name="toolbarStyle">@style/Widget.TimetableOptimizer.Toolbar</item>
    </style>
    
    <!-- No Action Bar Theme -->
    <style name="Theme.TimetableOptimizerAI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.TimetableOptimizerAI.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.TimetableOptimizerAI</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.TimetableOptimizer.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.TimetableOptimizer.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.TimetableOptimizer.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.TimetableOptimizer.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="TextAppearance.TimetableOptimizer.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="TextAppearance.TimetableOptimizer.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Component Styles -->
    <style name="Widget.TimetableOptimizer.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0.5dp</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.Button.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="elevation">8dp</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>
    
    <!-- Animation Styles -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="Theme.TimetableOptimizer.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
    
    <!-- Bottom Sheet Styles -->
    <style name="Theme.TimetableOptimizer.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.TimetableOptimizer.BottomSheet</item>
    </style>
    
    <style name="Widget.TimetableOptimizer.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TimetableOptimizer.BottomSheet</item>
    </style>
    
    <style name="ShapeAppearance.TimetableOptimizer.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.TimetableOptimizer.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="Widget.TimetableOptimizer.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TimetableOptimizer.FloatingActionButton</item>
    </style>
    
    <style name="ShapeAppearance.TimetableOptimizer.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
</resources>
